{
    "extends": [
        "airbnb-base",
        "plugin:jsx-a11y/recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "es6": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "settings": {
        "react": {
            "version": "16.8.6"
        }
    },
    "rules": {
        "no-confusing-arrow": "off"
    }
}